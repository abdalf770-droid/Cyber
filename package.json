{
  "name": "rest-express",
  "version": "1.0.0",
  "description": "Fullstack app with Vite frontend and Express backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "esbuild": "^0.21.0",
    "typescript": "^5.3.3"
  }
}
